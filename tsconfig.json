// https://www.npmjs.com/package/tsconfig-moon
{
  "extends": "tsconfig-moon/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,

    "types": [
      "vitest/importMeta"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true


  },
  "include": ["src/**/*"],
  "exclude": ["src/__lib/**/*", "src/plugins/**/*"]
}
